@model IEnumerable<TheTruck.Web.Models.CartViewModel>

<h2>Shopping cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <img src="@item.Image" height="100"/>
        </td>
        <td>
            @Html.ActionLink("-", "RmFromCart", null, new { id = item.Id }, new { @class = "btn btn-danger btn-xs"})
            @Html.DisplayFor(modelItem => item.Quantity)
            @Html.ActionLink("+", "AddToCart", null, new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTotal) ¥
        </td>
    </tr>
}
    <tr>
        <th colspan="5" style="text-align:right">TOTAL:</th>
        <th>@Model.Sum(x => x.SubTotal) ¥</th>
    </tr>
    <tr>
        <th colspan="5"></th>
        <th><a class="btn btn-primary btn-lg">Order</a></th>
    </tr>
</table>


