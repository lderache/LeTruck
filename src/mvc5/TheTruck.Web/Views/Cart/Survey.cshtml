@model TheTruck.Entities.Survey

<h3>You are almost done !</h3>

@using (Html.BeginForm("PostSurvey", "Cart"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please provide us the following informations to provide the best service to you. This is needed only for your first order.</h4>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderFrequency, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EnumDropDownListFor(model => model.OrderFrequency, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StayPeriod, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EnumDropDownListFor(model => model.StayPeriod, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.Comment, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Finalize order!" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
