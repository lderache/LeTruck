@{ 
    var products = Session["products"] as List<int>;
    if (products == null)
    {
        products = new List<int>();
    }
}

<ul class="nav navbar-nav">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-shopping-cart"></span><span id="cart-count"> @products.Count - Items</span><span class="caret"></span></a>
        <ul class="dropdown-menu dropdown-cart" role="menu">
            <li>
                <span class="item">
                    <span class="item-left">
                        <img src="http://lorempixel.com/50/50/" alt="" />
                        <span class="item-info">
                            <span>Item name</span>
                            <span>23$</span>
                        </span>
                    </span>
                    <span class="item-right">
                        <button class="btn btn-xs btn-danger pull-right">x</button>
                    </span>
                </span>
            </li>
            <li class="divider"></li>
            <li><a class="text-center" href="">View Cart</a></li>
        </ul>
    </li>
</ul>
